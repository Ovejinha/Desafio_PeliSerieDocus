<!DOCTYPE html>
<html>
  <head>
    <title>DesafioMoviesapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body style="background-image: url('<%= image_path('background.jpg') %>'); background-size: cover;">

   <section class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card mb-3 shadow pb-3">
          <div class="card-body">
            <div class="text-center mb-4">
              <h4>¿Qué necesitas Ingresar?</h4>
            </div>
            <div class="row justify-content-center">
              <div class="col-4 text-center">
                <div class="image-square">
                  <%= image_tag('peli.jpg', class: 'button-image foto-cabecera') %>
                  <div class="image-caption">
                    <%= link_to 'Ingresa Pelicula', movies_new_path, class: 'btn btn-success btn-lg mt-3' %>
                  </div>
                </div>
              </div>
              <div class="col-4 text-center">
                <div class="image-square">
                  <%= image_tag('serie.jpg', class: 'button-image foto-cabecera') %>
                  <div class="image-caption">
                    <%= link_to 'Ingresa Serie', series_new_path, class: 'btn btn-danger btn-lg mt-3' %>
                  </div>
                </div>
              </div>
              <div class="col-4 text-center">
                <div class="image-square">
                  <%= image_tag('documental.jpg', class: 'button-image foto-cabecera') %>
                  <div class="image-caption">
                    <%= link_to 'Ingresa Documental', documentary_films_new_path, class: 'btn btn-info btn-lg mt-3' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


    <%= yield %>
  </body>
</html>
